const hasError = computed(() => reportsStore.hasError)
const error = computed(() => reportsStore.error)

// Methods
const applyFilters = () => {
  switch (activeTab.value) {
    case 'travels':
      reportsStore.fetchTravels(filters.value)
      break
    case 'expenses':
      reportsStore.fetchExpenses(filters.value)
      break
    case 'users':
      reportsStore.fetchUsers()
      break
    case 'metrics':
      reportsStore.fetchMetrics()
      break
  }
}

const clearFilters = () => {
  filters.value = {
    start_date: '',
    end_date: '',
    status: 'all',
    category: 'all'
  }
  applyFilters()
}

const changeTab = (tab: string) => {
  activeTab.value = tab as 'travels' | 'expenses' | 'users' | 'metrics'
  applyFilters()
}

const exportReport = async (format: 'pdf' | 'excel' | 'csv') => {
  const result = await reportsStore.exportReport(activeTab.value === 'metrics' ? 'travels' : activeTab.value, format)
  if (result.success) {
    alert(`Relat√≥rio exportado: ${result.filename}`)
  } else {
    alert(`Erro ao exportar: ${result.message}`)
  }
}

// Lifecycle
